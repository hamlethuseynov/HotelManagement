@model List<BedType>
@{
    ViewBag.Title = "Index";
}

    <div class="row">
        <div class="col-lg-12">
            <div class="my-2">
                <a href="@Url.Action("create")" class="btn btn-light">Əlavə Et</a>
            </div>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Yatağın növü</th>
                        
                       

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @item.Type
                            </td>
                            
                            <td>
                                <a href="@Url.Action("edit",new {id=item.Id })" class="btn btn-sm btn-info">Yenilə</a>
                                <a onclick="return confirm ('Are you sure ?')" href="@Url.Action("delete",new {id=item.Id })" class="btn btn-sm btn-danger">Sil</a>
                            </td>
                        </tr>
                    }

                </tbody>

            </table>
        </div>

    </div>

